.wrap {
      width: 60rpx;
      height: 60rpx;
      border-radius: 50%;
      background: #91dbfa;
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      animation: wrap_ani 1s infinite alternate ;
    }

    .inner {
      width: 60rpx;
      height: 60rpx;
      background: #0575a4;
      border-radius: 50%;
      animation: inner_ani 1s infinite alternate ;
    }

    @keyframes inner_ani {
      0% {
        transform: scale(1)
      }

      100% {
        transform: scale(0)
      }
      
    }

    @keyframes wrap_ani {
      0% {
        transform: scale(0)
      }
      100%{
        transform: scale(1)
      } 
    }