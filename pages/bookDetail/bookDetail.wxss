.containear {
  width: 100%;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.header {
  width: 100%;
  margin-top: 20px;
  background: #fff;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.pic {
  width: 204rpx;
  height: 305rpx;
  margin: 36rpx 0 16rpx;
  box-shadow: 2px 2px 3px #ccc;
}

.name {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 38rpx;
  color: #000;
  text-align: center;
}

.author {
  width: 100%;
  height: 36rpx;
  line-height: 36rpx;
  color: #999;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 34rpx;
}

.shorcom {
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 10rpx;
}

.shorcom .com-title {
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  color: #000;
  font-size: 30rpx;
  text-align: center;
  margin-right: 10rpx;
  margin-bottom: 22rpx;
}

.com-con {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.short {
  margin-right: 10rpx;
  margin-bottom: 20rpx;
  border-radius: 40rpx;
  background: #f7f7f7;
  overflow: hidden;
}

.nums {
  font-size: 20rpx;
  color: #bbb;
  margin-left: 4rpx;
}

.v-tag1 {
  background: #fffadd;
}

.v-tag2 {
  background: #effaff;
}
.content-pro{
  font-size: 28rpx;
  color:#666;
  text-indent: 56rpx;
}
.book-detail{
  display: flex;
  flex-direction: row;
  padding-bottom: 20rpx;
}
.book-name,.book-info{
  display: flex;
  flex-direction: column;
}
.book-info{
  margin-left: 20rpx;
}
.book-detail text{
  color: #999;
  font-size: 24rpx;
}
.content-pro ,.book-detail{
  padding: 0 34rpx;
}
.book-detail-wrap{
  padding-bottom: 100rpx;
}

.comment{
  width: 100%;
  height: 86rpx;
  box-sizing: border-box;
  padding:0 20rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  box-shadow: 2px 0 2px #ccc;
  align-items: center;
  justify-content: space-between;
}
.import{
  width:406rpx;
  height: 54rpx;
  box-sizing: border-box;
  line-height: 54rpx;
  border:1px solid #ccc;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  padding-left: 34rpx;
}
.icon{
  width: 24rpx;
  height: 24rpx;
}
.text{
  font-size: 24rpx;
  color: #010101;
  margin-left: 10rpx;
}
.heart{
  margin-left: 80rpx;
}

/* 书写短评 */
.moreInfor{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,.5);
}
.moreInfor .content{
  position: absolute;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  width: 100%;
  background: #fff;
}
.moreInfor .btn-wrap{
 border-bottom: 1px solid #eeeeee;
}
.moreInfor .btn{
  padding: 0 24rpx; 
  height: 96rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.moreInfor .close,.moreInfor .submit{
  height: 96rpx;
  line-height: 96rpx;
  color: #000;
  font-size: 32rpx;
  width: 200rpx;
}
.moreInfor .submit{
  text-align: right;
}
.moreInfor .close{
  color: #999;
}
.moreInfor .input-warp{
  padding: 30rpx 24rpx;
}
.moreInfor .text{
  height: 68rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  padding-left: 20rpx;
}

