.container{
  width: 100%;
  background:#f5f5f5;
}
.header{
  position: relative;
  background:#fff;
}
.header .bg{
  width: 100%;
  height: 556rpx;
}
.content{
  position: absolute;
  top: 58%;
  left: 50%;
  transform: translate(-50%,-50%);
  display: flex;
  width: 100%rpx;
  flex-wrap:wrap;
  justify-content: center;
  height: 168rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}
 .auther{
  height: 120rpx;
  width: 120rpx;
}
.name{
  width: 100%;
  font-size: 34rpx;
  color: #000;
  text-align: center;
}
button{
  padding: 0 !important;
  background: none;
  border: none !important;
  font-size: 0 !important;
  border-radius: 50%;
}

.myLike{
  width:100%;
}
.myLike .title{
  margin-top:20rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items:center;
}
.myLike image{
  width: 94rpx;
  height: 42rpx;
}

.like_content{
  display: flex;
  flex-wrap: wrap;
}

